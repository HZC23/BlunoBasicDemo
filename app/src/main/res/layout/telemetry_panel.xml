<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.hzc.nonocontroller.viewmodel.MainViewModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Télémétrie"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginBottom="8dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`Etat: ` + viewModel.telemetry.state}"
                    tools:text="Etat: IDLE"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`Cap: ` + viewModel.telemetry.heading + `°`}"
                    tools:text="Cap: 90°"
                    android:textAppearance="?attr/textAppearanceBody1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`Distance US: ` + viewModel.telemetry.distance + ` cm`}"
                    tools:text="Distance US: 100 cm"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`Distance Laser: ` + viewModel.telemetry.distanceLaser + ` mm`}"
                    tools:text="Distance Laser: 200 mm"
                    android:textAppearance="?attr/textAppearanceBody1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`Batterie: ` + viewModel.telemetry.battery + `%`}"
                    tools:text="Batterie: 75%"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`Vitesse Cible: ` + viewModel.telemetry.speedTarget}"
                    tools:text="Vitesse Cible: 200"
                    android:textAppearance="?attr/textAppearanceBody1"/>

            </GridLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>