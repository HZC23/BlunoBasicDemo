<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.hzc.nonocontroller.viewmodel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        tools:context=".ui.MainActivity">

        <TextView
            android:id="@+id/tvRobotState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/text_primary"
            android:text="@{viewModel.telemetry.state}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="State: IDLE" />

        <!-- Directional controls on the left -->
        <LinearLayout
            android:id="@+id/directional_controls"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRobotState"
            app:layout_constraintWidth_percent="0.35" >

            <!-- Directional Buttons -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Stop Button (Center) -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/button_stop"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_stop"
                    android:onClick="@{() -> viewModel.onStopButtonClicked()}"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.33"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Up Button -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/button_up"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:srcCompat="@{viewModel.telemetry.state.equals(&quot;FOLLOW_HEADING&quot;) || viewModel.telemetry.state.equals(&quot;MAINTAIN_HEADING&quot;) ? @drawable/ic_pause : @drawable/ic_arrow_up}"
                    android:onClick="@{() -> viewModel.onDirectionalButtonClicked(&quot;up&quot;, viewModel.telemetry.state)}"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.33"
                    app:layout_constraintBottom_toTopOf="@+id/button_stop"
                    app:layout_constraintStart_toStartOf="@+id/button_stop"
                    app:layout_constraintEnd_toEndOf="@+id/button_stop" />

                <!-- Down Button -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/button_down"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:srcCompat="@{viewModel.telemetry.state.equals(&quot;FOLLOW_HEADING&quot;) || viewModel.telemetry.state.equals(&quot;MAINTAIN_HEADING&quot;) ? @drawable/ic_stop : @drawable/ic_arrow_down}"
                    android:onClick="@{() -> viewModel.onDirectionalButtonClicked(&quot;down&quot;, viewModel.telemetry.state)}"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.33"
                    app:layout_constraintTop_toBottomOf="@+id/button_stop"
                    app:layout_constraintStart_toStartOf="@+id/button_stop"
                    app:layout_constraintEnd_toEndOf="@+id/button_stop" />

                <!-- Left Button -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/button_left"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:srcCompat="@{viewModel.telemetry.state.equals(&quot;FOLLOW_HEADING&quot;) || viewModel.telemetry.state.equals(&quot;MAINTAIN_HEADING&quot;) ? @drawable/ic_rotate_left : @drawable/ic_arrow_left}"
                    android:onClick="@{() -> viewModel.onDirectionalButtonClicked(&quot;left&quot;, viewModel.telemetry.state)}"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.33"
                    app:layout_constraintEnd_toStartOf="@+id/button_stop"
                    app:layout_constraintTop_toTopOf="@+id/button_stop"
                    app:layout_constraintBottom_toBottomOf="@+id/button_stop" />

                <!-- Right Button -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/button_right"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:srcCompat="@{viewModel.telemetry.state.equals(&quot;FOLLOW_HEADING&quot;) || viewModel.telemetry.state.equals(&quot;MAINTAIN_HEADING&quot;) ? @drawable/ic_rotate_right : @drawable/ic_arrow_right}"
                    android:onClick="@{() -> viewModel.onDirectionalButtonClicked(&quot;right&quot;, viewModel.telemetry.state)}"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.33"
                    app:layout_constraintStart_toEndOf="@+id/button_stop"
                    app:layout_constraintTop_toTopOf="@+id/button_stop"
                    app:layout_constraintBottom_toBottomOf="@+id/button_stop" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        <!-- Vertical LinearLayout for controls on the right -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/directional_controls"
            app:layout_constraintTop_toBottomOf="@+id/tvRobotState">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Connection Status Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface"
                    app:strokeWidth="0dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/connectionStatusIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:connectionStatusIcon="@{viewModel.connectionState}"
                            android:contentDescription="Connection Status Icon" />

                        <TextView
                            android:id="@+id/connectionStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:connectionStateText="@{viewModel.connectionState}"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="@color/text_primary"
                            tools:text="Disconnected" />

                        <Button
                            android:id="@+id/buttonScan"
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{() -> viewModel.onScanClicked()}"
                            android:text="Scan / Connect"
                            android:textColor="@color/text_primary"
                            android:backgroundTint="@color/colorAccent"
                            app:cornerRadius="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Autonomous Modes Card -->
                <include
                    layout="@layout/autonomous_modes_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:viewModel="@{viewModel}" />

                <!-- Turret Controls Card -->
                <include
                    layout="@layout/turret_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:viewModel="@{viewModel}" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
