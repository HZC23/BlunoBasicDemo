<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.hzc.nonocontroller.viewmodel.MainViewModel" />
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="?attr/colorSurface"
        tools:context=".MainActivity">

        <!-- Left Panel: Controls -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manual Control"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginBottom="16dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/button_up"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_arrow_up"
                    android:background="@drawable/button_selector"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageButton
                    android:id="@+id/button_down"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_arrow_down"
                    android:background="@drawable/button_selector"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageButton
                    android:id="@+id/button_left"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@drawable/button_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageButton
                    android:id="@+id/button_right"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@drawable/button_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/button_stop"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="STOP"
                android:onClick="@{() -> viewModel.onStopButtonClicked()}"
                app:icon="@drawable/ic_stop"
                />
        </LinearLayout>

        <!-- Right Panel: Status, Modes, and Accessories -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Status Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Status"
                                android:textAppearance="?attr/textAppearanceHeadline6" />
                            <Button
                                android:id="@+id/button_scan"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Scan"
                                android:onClick="@{() -> viewModel.onScanClicked()}"
                                app:icon="@drawable/ic_bluetooth"/>
                        </LinearLayout>
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:layout_marginTop="8dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                app:connectionStatusIcon="@{viewModel.connectionState}"
                                tools:src="@drawable/ic_ble_disconnected"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                app:connectionStateText="@{viewModel.connectionState}"
                                android:textAppearance="?attr/textAppearanceBody1"
                                tools:text="Disconnected"/>
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="16dp"
                                app:batteryIcon="@{viewModel.telemetry.battery}"
                                tools:src="@drawable/ic_battery_full"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="@{String.valueOf(viewModel.telemetry.battery) + '%'}"
                                android:textAppearance="?attr/textAppearanceBody1"
                                tools:text="100%"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text='@{"State: " + viewModel.telemetry.state}'
                                android:textAppearance="?attr/textAppearanceBody2"
                                tools:text="State: IDLE"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="8dp"
                                android:text='@{"Heading: " + viewModel.telemetry.heading + "°"}'
                                android:textAppearance="?attr/textAppearanceBody2"
                                tools:text="Heading: 90°"/>
                        </GridLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Control Mode Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Control Mode"
                            android:textAppearance="?attr/textAppearanceHeadline6" />
                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/mode_toggle_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:singleSelection="true"
                            app:selectionRequired="true"
                            android:checkedButton="@{viewModel.isManualMode ? @id/mode_manual_button : @id/mode_auto_button}">
                            <Button
                                android:id="@+id/mode_manual_button"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Manual"
                                android:onClick="@{() -> viewModel.onManualModeSelected()}"/>
                            <Button
                                android:id="@+id/mode_auto_button"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Auto"
                                android:onClick="@{() -> viewModel.onAutoModeSelected()}"/>
                        </com.google.android.material.button.MaterialButtonToggleGroup>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Autonomous Control Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="@{viewModel.isManualMode ? View.GONE : View.VISIBLE}"
                    app:cardElevation="4dp">
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Autonomous Control"
                            android:textAppearance="?attr/textAppearanceHeadline6" />
                        <Button
                            android:id="@+id/button_avoid"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text='@{viewModel.isAutoPaused ? "Resume" : "Pause"}'
                            android:onClick="@{() -> viewModel.onPauseResumeButtonClicked()}"
                            app:icon='@{viewModel.isAutoPaused ? @drawable/ic_play_arrow : @drawable/ic_pause}'
                            tools:text="Pause"/>
                         <Button
                             android:id="@+id/button_goto"
                             style="@style/Widget.MaterialComponents.Button.TextButton"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:text="Go to Heading"
                             android:onClick="@{() -> viewModel.onGoToHeadingClicked()}"
                             app:icon="@drawable/ic_baseline_radar_24"
                             />
                     </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Accessories Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardElevation="4dp">
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accessories"
                            android:textAppearance="?attr/textAppearanceHeadline6" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            android:gravity="center">
                            <Button
                                android:id="@+id/button_turret_left"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="@{() -> viewModel.onTurretLeftClicked()}"
                                app:icon="@drawable/ic_rotate_left"/>
                            <Button
                                android:id="@+id/button_turret_center"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:onClick="@{() -> viewModel.onTurretCenterClicked()}"
                                app:icon="@drawable/ic_baseline_center_focus_strong_24"/>
                            <Button
                                android:id="@+id/button_turret_right"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="@{() -> viewModel.onTurretRightClicked()}"
                                app:icon="@drawable/ic_rotate_right"/>
                        </LinearLayout>
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Headlight"
                            android:onCheckedChanged="@{(switch, checked) -> viewModel.onLightSwitched(checked)}"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Speed"/>
                        <SeekBar
                            android:id="@+id/seekbar_speed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="255"
                            android:progress="@{viewModel.speed}"
                            app:onSeekBarChangeListener="@{viewModel.onSpeedChanged}"
                            />
                     </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Log Panel -->
                <include layout="@layout/log_panel" app:viewModel="@{viewModel}" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>