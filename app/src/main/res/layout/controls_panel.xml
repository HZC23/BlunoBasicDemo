<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.hzc.nonocontroller.viewmodel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:padding="20dp">

        <Button
            android:id="@+id/button_stop_center"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="STOP"
            android:singleLine="true"
            android:onClick="@{() -> viewModel.onStopButtonClicked()}"
            app:backgroundTint="@color/design_default_color_error"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/button_up"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_arrow_up"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/button_stop_center"
            app:layout_constraintStart_toStartOf="@id/button_stop_center"
            app:layout_constraintEnd_toEndOf="@id/button_stop_center" />

        <ImageButton
            android:id="@+id/button_down"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/button_stop_center"
            app:layout_constraintStart_toStartOf="@id/button_stop_center"
            app:layout_constraintEnd_toEndOf="@id/button_stop_center" />

        <ImageButton
            android:id="@+id/button_left"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_arrow_left"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/button_stop_center"
            app:layout_constraintTop_toTopOf="@id/button_stop_center"
            app:layout_constraintBottom_toBottomOf="@id/button_stop_center" />

        <ImageButton
            android:id="@+id/button_right"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/button_stop_center"
            app:layout_constraintTop_toTopOf="@id/button_stop_center"
            app:layout_constraintBottom_toBottomOf="@id/button_stop_center" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>